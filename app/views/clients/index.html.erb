<h1>Clients</h1>

<%= link_to 'New Client', new_client_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Telephone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.full_name %></td>
        <td><%= client.telephone %></td>
        <td>
          <%= link_to 'Show', client, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_client_path(client), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', client, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
