<h1>Clients</h1>

<%= link_to 'New Client', new_client_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Telephone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.full_name %></td>
        <td><%= client.telephone %></td>
        <td>
          <div class="btn-group">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              ...
            </button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Show', client, class: 'dropdown-item' %>
              </li>
              <li>
                <%= link_to 'Edit', edit_client_path(client), class: 'dropdown-item' %>
              </li>
              <li>
                <%= link_to 'Delete', client_path(client), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete the client?" }, class: 'dropdown-item' %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
