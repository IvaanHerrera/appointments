<h1>Locations</h1>

<%= link_to 'New Location', new_location_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.address %></td>
        <td>
          <%= link_to 'Show', location, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_location_path(location), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
