<h1>Locations</h1>

<%= link_to 'New Location', new_location_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Total Appointments</th>
      <th>Unique Clients with appointments</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= @total_appointments[location.id] || 0 %></td>
        <td><%= @unique_clients[location.id] || 0 %></td>
        <td>
          <div class="btn-group">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              ...
            </button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Show', location, class: 'dropdown-item' %>
              </li>
              <li>
                <%= link_to 'Edit', edit_location_path(location), class: 'dropdown-item' %>
              </li>
              <li>
                <%= link_to 'Delete', location_path(location), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete the location?" }, class: 'dropdown-item' %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>