<div class="nested-fields border p-3 mb-2">
  <div class="row">
    <div class="col-md-4">
      <%= f.label :address, "Email Address" %>
      <%= f.email_field :address, class: "form-control" %>
    </div>
  </div>
  <%= f.hidden_field :_destroy %>
  <button type="button" class="btn btn-danger remove-email" data-action="nested-email-form#remove">
    Remove Email
  </button>
</div>


